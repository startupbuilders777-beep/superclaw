// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Subscription tiers
enum SubscriptionTier {
  STARTER
  PRO
  AGENCY
  FREE
}

// Subscription status
enum SubscriptionStatus {
  ACTIVE
  CANCELED
  PAST_DUE
  TRIALING
  INCOMPLETE
  INCOMPLETE_EXPIRED
}

model User {
  id                  String   @id @default(cuid())
  email               String   @unique
  name                String?
  password            String?  // For credentials auth
  
  // Auth providers
  telegramId          String?  @unique
  discordId           String?  @unique
  slackId             String?  @unique
  slackTeamId         String?
  
  // Stripe customer info
  stripeCustomerId    String?  @unique
  stripeSubscriptionId String? @unique
  
  // Subscription
  subscriptionTier    SubscriptionTier @default(FREE)
  subscriptionStatus  SubscriptionStatus?
  subscriptionEndDate DateTime?
  
  // Usage tracking
  messagesThisMonth  Int      @default(0)
  messageLimit       Int      @default(0)
  
  // Agents
  agents              Agent[]
  
  // NextAuth relations
  accounts            Account[]
  sessions            Session[]
  
  // Timestamps
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Agent {
  // Cron scheduling configuration
  scheduleEnabled Boolean  @default(false)
  scheduleType    String?  // hourly, daily, weekly
  scheduleTime    String?  // time of day for daily/weekly (HH:mm)
  scheduleDay     String?  // day of week for weekly (monday, tuesday, etc.)
  scheduleCron    String?  // custom cron expression
  id              String   @id @default(cuid())
  name            String
  status          String   @default("pending") // pending, active, stopped
  
  // Skills configuration (JSON)
  skills          Json?
  
  // Container info
  containerId     String?
  containerStatus String?
  
  // Health tracking
  healthStatus    String?  // healthy, unhealthy, unknown
  lastHealthCheck DateTime?
  lastError       String?
  restartCount    Int      @default(0)
  
  // User relation
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

// Stripe price IDs for each tier
model Price {
  id            String   @id @default(cuid())
  stripePriceId String   @unique
  tier          SubscriptionTier
  amount        Int      // in cents
  interval      String   // month, year
  active        Boolean  @default(true)
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Webhook events log
model StripeEvent {
  id        String   @id @default(cuid())
  eventId   String   @unique // Stripe event ID
  type      String
  data      Json
  processed Boolean  @default(false)
  
  createdAt DateTime @default(now())
}

// Message usage tracking for billing analytics
model MessageUsage {
  id            String   @id @default(cuid())
  userId        String
  count         Int      @default(1)
  periodStart   DateTime // Start of the billing period (monthly)
  periodEnd     DateTime // End of the billing period
  agentId       String?  // Optional: which agent sent the message
  createdAt     DateTime @default(now())

  @@index([userId, periodStart])
}

model SlackWorkspace {
  id              String   @id @default(cuid())
  slackTeamId     String   @unique
  slackTeamName   String?
  slackBotToken   String?
  slackBotUserId  String?
  userId          String?
  isActive        Boolean  @default(true)
  
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SlackCommand {
  id           String   @id @default(cuid())
  command      String
  userId       String?
  userName     String?
  channelId    String?
  channelName  String?
  teamId       String?
  responseUrl  String?
  text         String?
  response     String?
  
  createdAt   DateTime @default(now())
}

// Team roles
enum TeamRole {
  ADMIN
  EDITOR
  VIEWER
}

// Team member model for agency tier
model TeamMember {
  id            String   @id @default(cuid())
  email         String
  name          String?
  role          TeamRole @default(VIEWER)
  
  // Invitation status
  status        String   @default("pending") // pending, active, declined
  invitationToken String?
  invitedAt     DateTime @default(now())
  acceptedAt    DateTime?
  
  // User reference (if accepted)
  userId        String?
  
  // Who invited this member
  invitedById   String
  
  // Agency/team owner
  ownerId       String
  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([email, ownerId])
}
